# TradeGenius Pro - Environment Configuration
# Copy this file to .env and fill in your API keys

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-too
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///tradegenius.db
# For PostgreSQL: postgresql://username:password@localhost/tradegenius
# For MySQL: mysql://username:password@localhost/tradegenius

# API Keys for Market Data
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
FINNHUB_API_KEY=your-finnhub-api-key
POLYGON_API_KEY=your-polygon-api-key
IEX_CLOUD_API_KEY=your-iex-cloud-api-key

# News and Sentiment Analysis
NEWS_API_KEY=your-newsapi-key
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# Cryptocurrency Exchange APIs
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (for caching and real-time features)
REDIS_URL=redis://localhost:6379/0

# Payment Gateway (for premium subscriptions)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/tradegenius.log

# Security Configuration
RATE_LIMIT_PER_MINUTE=100
MAX_CONTENT_LENGTH=16777216  # 16MB

# Premium Features Configuration
PREMIUM_PRICE_MONTHLY=49.99
PREMIUM_PRICE_YEARLY=499.99
FREE_SIGNALS_LIMIT=10
PREMIUM_SIGNALS_LIMIT=100

# WebSocket Configuration
WEBSOCKET_ENABLED=True
WEBSOCKET_PORT=5001

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Social Media Links
TWITTER_URL=https://twitter.com/tradegeniuspro
LINKEDIN_URL=https://linkedin.com/company/tradegeniuspro
TELEGRAM_URL=https://t.me/tradegeniuspro
DISCORD_URL=https://discord.gg/tradegeniuspro